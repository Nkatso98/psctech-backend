{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",

  "ConnectionStrings": {
    // For local dev you may paste the real connection strings here.
    // In production (Render) set these as environment variables:
    //   ConnectionStrings__DefaultConnection
    //   ConnectionStrings__MasterDatabase
    "MasterDatabase": "Host=<RENDER_PG_HOST>;Port=5432;Database=psctech_production;Username=<RENDER_PG_USER>;Password=<RENDER_PG_PASSWORD>;SSL Mode=Require;Trust Server Certificate=true",
    "DefaultConnection": "Host=<RENDER_PG_HOST>;Port=5432;Database=psctech_production;Username=<RENDER_PG_USER>;Password=<RENDER_PG_PASSWORD>;SSL Mode=Require;Trust Server Certificate=true"
  },

  "MultiTenant": {
    "MasterDatabaseName": "psctech_production",
    "TenantDatabasePrefix": "psctech_tenant_",
    "DefaultTenantCode": "DEMO001",
    "ConnectionStringTemplate": "Host=<RENDER_PG_HOST>;Port=5432;Database=psctech_production;Username=<RENDER_PG_USER>;Password=<RENDER_PG_PASSWORD>;SSL Mode=Require;Trust Server Certificate=true"
  },

  "VoucherSystem": {
    "Denominations": [5, 10, 15, 20, 25, 30, 35, 40, 45],
    "MaxLearnerCount": 10,
    "ExpiryDaysAfterRedemption": 30,
    "DefaultInstitution": "DEMO001"
  },

  "Security": {
    "JwtSecret": "psctech-jwt-secret-key-2024-render-production",
    "JwtExpiresIn": "24h",
    "CorsOrigins": [
      "http://localhost:3000",
      "https://psctech-2f998.web.app",
      "https://psctech-2f998.firebaseapp.com"
      // add your custom domain(s) here when ready, e.g. "https://api.psctech.co.za"
    ]
  },

  "Jwt": {
    "Key": "psctech-jwt-secret-key-2024-render-production",
    "Issuer": "PscTechBackend",
    "Audience": "PscTechFrontend",
    "ExpiresIn": "24h"
  },

  "Swagger": {
    "Title": "PSC Tech Backend API",
    "Version": "1.0.0",
    "Description": "Professional voucher system backend for PSC Tech multi-tenant platform (Render + PostgreSQL)"
  },

  "DemoCredentials": {
    "Principal": { "Email": "principal@demoschool.com", "Password": "password123" },
    "Teacher":   { "Email": "teacher@demoschool.com",   "Password": "password123" },
    "Parent":    { "Email": "parent@demoschool.com",    "Password": "password123" },
    "Learner":   { "Email": "learner@demoschool.com",   "Password": "password123" }
  }
}
